<%- include('../partials/header')  -%>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<link rel="stylesheet" href="/css/recommendations.css">

</head>

<body>

    <%- include('../partials/navigation')  -%>

    <div class="jumbotron jumbotron-fluid" style="background: linear-gradient(to bottom right, #acb6e5, #86fde8);">
        <div class="container" style="text-align: center;">
            <h1 class="display-4">Top User Preferences</h1>
            <p class="lead">Making your movie experience better with computer black magic.</p>
        </div>
    </div>
    <section class="container">

        <div class="container">

            <div class="row">
                <% moviesData.forEach(movie => { %>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card shadow" style="text-align: center; margin-bottom: 30px;">
                        <img src="<%= movie.Poster %>" alt="" style="width: 243px; height: 420px;">
                        <div class="card-body">
                            <a class="btn btn-primary" href="/info/<%= movie.imdbID %>">Give review</a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <footer style="background-color: #eee !important;" id="sticky-footer" class="py-4 bg-light text-dark-50">
        <div class="container text-center">
            <small>Copyright &copy; CINEMIX</small>
        </div>
    </footer>

    <%- include('../partials/footer')  -%>